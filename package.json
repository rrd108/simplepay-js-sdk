{
  "name": "simplepay-js-sdk",
  "version": "0.4.0",
  "description": "A Node.js utility for SimplePay payment integration",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrd108/simplepay-js-sdk"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "release": "bash ./release.sh",
    "generate-signature": "node tools/generate-signature.js"
  },
  "keywords": [
    "simplepay",
    "payment",
    "nodejs",
    "typescript"
  ],
  "author": "Radharadhya Dasa",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
